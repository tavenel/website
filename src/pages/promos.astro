---
import { Picture } from 'astro:assets';
import undrawProfessor from '@assets/undraw/undraw_professor_d7zn.svg'

import Layout from '@layouts/BaseLayout.astro'

const title = 'Cours';
const { url } = Astro.props;
---

<Layout title={title} url={url}>

	<h1>{title}</h1>

	<Picture src={undrawProfessor} alt="An image of a professor with a dashboard."/>

	<h2>Par promotions</h2> 

	<div id="promos">
		<div class="column-promo">

			<div id="epsi">

				<h3>EPSI Grenoble</h3> 

				<ul>
					<li><a href="/epsi/b3">B3</a></li>
					<li><a href="/epsi/i1">I1</a></li>
					<li><a href="/epsi/i2">I2</a></li>
				</ul>

			</div>

		</div>
		<div class="column-promo">

			<div id="esgi">

				<h3>ESGI Grenoble<span data-tooltip="École Supérieure de Génie Informatique"> 💭</span></h3>

				<ul>
					<li><a href="/esgi/b3">B3</a></li>
					<li><a href="/esgi/m1">M1</a></li>
					<li><a href="/esgi/m2">M2</a></li>
				</ul>

			</div>

		</div>
		<div class="column-promo">

			<div id="cesi">

				<h3>CESI Grenoble</h3>

				<li><a href="/cesi/b3/tests">🧪 B3 CDA25 : Tests et recette d'un projet informatique</a></li>
				<li><a href="/cesi/b3/linux">🐧 B3 ASR : Linux avancé</a></li>
				<li><a href="/cesi/m1/dashboard">📈 MAALSI25 : Tableaux de bord</a></li>
				<li><a href="/cesi/m2/tests">🧪 MAALSI24 : Stratégie de tests</a></li>
				<li><a href="/cesi/m2/devsecops">󱃾  MAALSI24 : Transformation DevSecOps</a></li>
				<li><a href="/cesi/m2/k8s">󱃾  MAALSI24 : Plateforme d'orchestration des clusters applicatifs</a></li>

			</div>

		</div>
	</div>

</Layout>
