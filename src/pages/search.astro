---
import Layout from '@layouts/BaseLayout.astro'

import LocalSearch from "astro-pagefind/components/Search";

import { Picture } from 'astro:assets';
import searchImage from '@assets/undraw/undraw_search-engines_k649.svg'

const title = 'Search';
const { url } = Astro.props;
const q = "";
---

<Layout title={title} url={url}>
	<h1>{title}</h1>
	<Picture src={searchImage} alt="An image of a search."/>
	<h2>Results for : {q}</h2>
	<LocalSearch className="pagefind-ui" query={q} />
</Layout>
